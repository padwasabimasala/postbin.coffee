extends layout

block content
  h1= Postbin
  h2= Stats
    p Request Count #{stats.total_requests} Uptime: #{stats.uptime} Requests/Second: #{stats.requests_per_second}
    p Request Time (ms) Last: #{stats.req_time_last} Ave: #{stats.req_time_ave} Min: #{stats.req_time_min} Max: #{stats.req_time_max}

  each event in events_list
    h2= event.name
    p at #{event.created_at}
    h3 headers
    pre
      =JSON.stringify(event.headers, null, 2)
    h3 body
    pre
      =JSON.stringify(event.body, null, 2)
